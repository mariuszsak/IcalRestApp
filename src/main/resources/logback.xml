<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %-5level %logger{36} - %msg%n</pattern>-->
            <pattern>%highlight(%-5level) %cyan(%logger{10}): %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>